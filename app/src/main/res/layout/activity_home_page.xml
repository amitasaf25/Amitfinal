<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@drawable/backround_image"
    tools:context=".UI.HomePage.HomePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:text="שלום "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:id="@+id/tvname"
        android:layout_alignParentEnd="true"

        />

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="@drawable/moneyimage"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
         android:layout_marginRight="40dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tvmoney"
        android:text="שקל"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btncamera"
        android:background="@drawable/roundbackround"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:text="have you recycle today?"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:id="@+id/tvdes"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/etdes"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/roundbackround"
        android:id="@+id/btndes"
        android:text="press here to earn money"

        />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btndes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />



</RelativeLayout>