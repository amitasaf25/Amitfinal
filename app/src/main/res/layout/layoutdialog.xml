<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/Terms">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp" android:layout_margin="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F4DADA"
            android:padding="24dp">

            <ImageView
                android:layout_width="50dp"
                android:background="@drawable/baseline_check_circle_24"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/vectorpic"
                android:layout_height="50dp">
            </ImageView>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Success"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:id="@+id/topPanel"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/text_input_error"
                android:layout_marginBottom="15dp"
                android:text="You are Loged In">
            </TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_gravity="center"
                android:id="@+id/done"
                android:background="#91BB5F"
                android:textColor="#000000">
            </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>